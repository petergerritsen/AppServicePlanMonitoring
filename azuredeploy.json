{
    "$schema": "http://schemas.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "appName": {
            "type": "string",
            "metadata": {
                "description": "The name of the function app that you wish to create."
            }
        },
        "servicePlanName": {
            "type": "string",
            "metadata": {
                "description": "The name of the service plan you wish to monitor"
            }
        },
        "servicePlanResourceGroup": {
            "type": "string",
            "metadata": {
                "description": "The name of the resource group for the service plan you wish to monitor"
            }
        },
        "instrumentationKey": {
            "type": "string",
            "metadata": {
                "description": "The Application Insights instrumentation key to send the telemetry to"
            }
        },
        "repoURL": {
            "type": "string",
            "defaultValue": "https://github.com/petergerritsen/appserviceplanmonitoring.git",
            "metadata": {
                "description": "The URL for the GitHub repository that contains the project to deploy."
            }
        },
        "branch": {
            "type": "string",
            "defaultValue": "master",
            "metadata": {
                "description": "The branch of the GitHub repository to use."
            }
        }
    },
    "variables": {
        "appServicePlanName": "[concat(parameters('appName'), 'serviceplan')]",
        "functionAppName": "[parameters('appName')]"
    },
    "resources": [
        {
            "type": "Microsoft.Web/serverfarms",
            "apiVersion": "2018-02-01",
            "name": "[variables('appServicePlanName')]",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Y1",
                "tier": "Dynamic"
            },
            "properties": {
                "name": "[variables('appServicePlanName')]",
                "computeMode": "Dynamic"
            }
        },
        {
            "apiVersion": "2015-08-01",
            "type": "Microsoft.Web/sites",
            "name": "[variables('functionAppName')]",
            "kind": "functionapp",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', variables('appServicePlanName'))]"
            ],
            "properties": {
                "name": "[variables('functionAppName')]",
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('appServicePlanName'))]",
                "hostingEnvironment": "",
                "clientAffinityEnabled": false,
                "identity": {
                    "type": "SystemAssigned"
                },
                "siteConfig": {
                    "alwaysOn": true,
                    "cors": {
                        "allowedOrigins": [
                            "*"
                        ]
                    },
                    "appSettings": [
                        {
                            "name": "FUNCTIONS_EXTENSION_VERSION",
                            "value": "~2"
                        },
                        {
                            "name": "SUBSCRIPTIONID",
                            "value": "[subscription().subscriptionId]"
                        },
                        {
                            "name": "RESOURCEGROUP",
                            "value": "[parameters('servicePlanResourceGroup')]"
                        },
                        {
                            "name": "APPSERVICEPLAN",
                            "value": "[parameters('servicePlanName')]"
                        },
                        {
                            "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
                            "value": "[parameters('instrumentationKey')]"
                        }
                    ]
                }
            },
            "resources": [
                {
                    "apiVersion": "2015-08-01",
                    "name": "web",
                    "type": "sourcecontrols",
                    "dependsOn": [
                        "[resourceId('Microsoft.Web/Sites', variables('functionAppName'))]"
                    ],
                    "properties": {
                        "RepoUrl": "[parameters('repoURL')]",
                        "branch": "[parameters('branch')]",
                        "IsManualIntegration": true
                    }
                }
            ]
        }
    ]
}